{
  "name": "streameq-app",
  "version": "1.0.0",
  "main": "src/electron.js",
  "license": "MIT",
  "scripts": {
    "dev": "webpack --config webpack.dev.js",
    "dev-electron": "electron .",
    "build": "webpack --config webpack.prod.js && electron-builder",
    "rebuildnew": "npm rebuild --runtime=electron --target=5.0.0 --disturl=https://atom.io/download/atom-shell --abi=70"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.35",
    "@fortawesome/free-solid-svg-icons": "^5.15.3",
    "@fortawesome/react-fontawesome": "^0.1.14",
    "clsx": "^1.1.1",
    "electron-is-dev": "^2.0.0",
    "electron-serve": "^1.1.0",
    "iohook": "^0.9.3",
    "lodash": "^4.17.21",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.171",
    "@types/react": "^17.0.14",
    "@types/react-dom": "^17.0.9",
    "css-loader": "^6.0.0",
    "electron": "12",
    "electron-builder": "^22.11.7",
    "electron-rebuild": "^2.3.5",
    "html-webpack-plugin": "^5.3.2",
    "node-sass": "^6.0.1",
    "sass-loader": "^12.1.0",
    "style-loader": "^3.1.0",
    "ts-loader": "^9.2.3",
    "typescript": "^4.3.5",
    "webpack": "^5.44.0",
    "webpack-cli": "^4.7.2",
    "webpack-dev-server": "^3.11.2"
  },
  "build": {
    "appId": "com.electron.streameq-app",
    "win": {
      "target": "portable"
    },
    "portable": {
      "unicode": true,
      "artifactName": "StreamEQ.exe"
    },
    "extraResources": [
      {
        "from": "./dist/web",
        "to": "static",
        "filter": [
          "**/*"
        ]
      }
    ]
  },
  "iohook": {
    "targets": [
      "node-72",
      "electron-87"
    ],
    "platforms": [
      "win32",
      "darwin",
      "linux"
    ],
    "arches": [
      "x64",
      "ia32"
    ]
  }
}
